<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wed 14 Jun 2017"
        android:id="@+id/tv_maindate"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv_content"
        android:layout_height="248dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="40dp"
                android:id="@+id/bt_show"
                android:background="@drawable/ic_expand_more_black_24dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp">

            </ImageButton>
            <TextView
                android:id="@+id/tv_org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:text="Institute Mobops" />
            <TextView
                android:id="@+id/tv_briefdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="54dp"
                android:text="TextView " />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_org"
                android:id="@+id/view" />
            <View
                android:layout_width="match_parent"
                android:id="@+id/v_bottom"
                android:layout_height="2dp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/tv_briefdes"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/bt_share"
                android:background="@drawable/ic_share_black_24dp"
                android:layout_below="@+id/v_bottom"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_save"
                android:layout_margin="10dp"
                android:layout_below="@+id/v_bottom"
                android:layout_toRightOf="@+id/bt_share"
                android:background="@drawable/ic_save_black_24dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bt_save"
                android:layout_margin="10dp"
                android:id="@+id/bt_sched"
                android:layout_below="@+id/v_bottom"
                android:background="@drawable/ic_schedule_black_24dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bt_sched"
                android:id="@+id/bt_contact"
                android:layout_margin="10dp"
                android:layout_below="@+id/v_bottom"
                android:background="@drawable/ic_email_black_24dp"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>